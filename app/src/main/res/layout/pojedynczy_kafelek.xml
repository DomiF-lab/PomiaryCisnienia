<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dataPomiaru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:fontFamily="@font/roboto"
            android:textColor="#797979"
            android:textSize="15sp"
            android:text="07.05.2025 15:20" />

        <TextView
            android:id="@+id/Samopoczucie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:fontFamily="@font/roboto"
            android:textColor="#797979"
            android:textSize="15sp"
            android:text="Samopoczucie:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/wartoscCisnienia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#1A1C29"
            android:textSize="24sp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="120/80" />

        <TextView
            android:id="@+id/wartoscTetna"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#1A1C29"
            android:textSize="19sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TÄ™tno: 67" />

        <TextView
            android:id="@+id/etykietaOceny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_wlasny"
            android:gravity="center"
            android:minWidth="73dp"
            android:padding="8dp"
            android:text="Dobre"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
